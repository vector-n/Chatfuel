# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
BOT_USERNAME=chatfuelRobot

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chatfuel_db
# For Railway/Render, this will be automatically provided

# Environment
ENVIRONMENT=development  # development, staging, production

# Admin Users (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789,987654321

# Payment Configuration (Telegram Stars)
PAYMENT_PROVIDER_TOKEN=your_payment_provider_token

# Security
SECRET_KEY=your_secret_key_for_encryption
ENCRYPTION_KEY=your_fernet_encryption_key

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
MAX_BROADCASTS_PER_DAY=10

# Webhook Configuration (for production)
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PORT=8443

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
